<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="equipment-lending-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity Classes -->
        <class>com.school.equipmentlending.model.User</class>
        <class>com.school.equipmentlending.model.Equipment</class>
        <class>com.school.equipmentlending.model.BorrowRequest</class>
        
        <properties>
            <!-- Database Connection Settings -->
            <property name="jakarta.persistence.jdbc.url" 
                      value="jdbc:mysql://scalable-assignment-scalableservice-assignment.h.aivencloud.com:14112/equipment_lending_db?sslMode=REQUIRED&amp;allowPublicKeyRetrieval=true&amp;useSSL=true&amp;verifyServerCertificate=false&amp;autoReconnect=true"/>
            <property name="jakarta.persistence.jdbc.user" value="avnadmin"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            
            <!-- Hibernate Settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Connection Pool (HikariCP) -->
            <property name="hibernate.connection.provider_class" 
                      value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="hibernate.hikari.minimumIdle" value="5"/>
            <property name="hibernate.hikari.maximumPoolSize" value="20"/>
            <property name="hibernate.hikari.idleTimeout" value="300000"/>
        </properties>
    </persistence-unit>
</persistence>

